                    //async function editDetail(id) {
                    //    console.log(id);
                    //    const data = await fetch(`@Url.Content("~/Orders/EditDetail/?id=${id}")`);
                    //}
                });
            })

        $('.delete_btn').on('click', () => {
            console.log("123");
