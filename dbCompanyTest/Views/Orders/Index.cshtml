                        console.log(a);
                        var yes = confirm('是否確定要刪除這筆細項？');
                        if (yes)
                            deleDetail(a);
                    });
                    //$('.EditDetail_btn').on('click', () => {
                    //    console.log("123");
                    //    var a = $(event.currentTarget).attr("name");
                    //    editDetail(a);
                    //});
                    async function deleDetail(id) {
