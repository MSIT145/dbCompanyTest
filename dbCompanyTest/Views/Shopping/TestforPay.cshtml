@model System.Collections.Generic.Dictionary<string , string>
@{
    ViewData["Title"] = "TestforPay";
}
<h3>資料導向中，請勿關閉網頁</h3>

<form style="display:none" id="form" name="form" action="https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5" method="POST">
    @foreach (var key in @Model.Keys.ToList())
    {
        @(key) <input type="text" name="@key" value="@Model[key]" />

        <br />
    }
</form>
@section Scripts{
    <script type="text/javascript">
        window.onload = function () {
            document.getElementById("form").submit();
        }
    </script>

}