@*@model IEnumerable<dbCompanyTest.Models.ToDoList>*@

@{
    if (ViewBag.dep == "行政" || ViewBag.dep == "執行長室")
        Layout = "_Back_Layout_Sneat";
    else if (ViewBag.dep == "人事")
        Layout = "_Back_Layout_Sneat_HR";
}
<div style="width:80%;margin:20px auto;">
    <h4 id="stf_info">@ViewBag.acc</h4>

    <div>
        <table class="table1 table table-striped-columns">
            <thead>
            </thead>
            <thead>
                <tr>
                    <th>待簽表單</th>
                </tr>
            </thead>
            <thead>
                <tr class="header">
                    <th class="col-1">表單編號</th>
                    <th class="col-1">表單類型</th>
                    <th class="col-3">表單內容</th>
                    <th class="col-1">狀態</th>
                    <th class="col-1"></th>
                </tr>
            </thead>

            <tbody>
                <tr>
                    <td colspan="5" style="padding:0; ">
                        <div>
                            <table class="table-inner table table-striped-columns" style="margin:0 !important;">
                                <tbody id="ToDolist_tbody">
                                </tbody>
                            </table>
                        </div>
                        <div>
                            <table class="table-inner table table-striped-columns">
                                <tbody id="ToDolist_tbody_sec">
                                </tbody>
                            </table>
                        </div>
                    </td>
                </tr>
            </tbody>
            
        </table>
    </div>
</div>

@section Scripts{
    <script>
        $.ajax({
            url: `@Url.Content("~/Staff_Home/ListWaitingData")`,
            type: "GET",
            dataType: "json"
        })
            .done(data => {
                let docFrag = $(document.createDocumentFragment());
                let docFrag_sec = $(document.createDocumentFragment());
                $.each(data, function (i, i_val) {
                    let eleT = "";
                    let eleT_sec = "";
                    if (i <= 4) {
                        eleT = $(`<tr></tr>`).append(`<td class="col-1">${i_val.交辦事項id}</td>
                                                        <td class="col-1">${i_val.表單類型}</td>
                                                        <td class="col-3">${i_val.表單內容}</td>
                                                        <td class="col-1">${i_val.表單狀態}</td>
                                                                        <td class="col-1"><a href = "${`@Url.Content("~/Staff_Home/DT_TDL")`}/?listNum=${i_val.交辦事項id}"><button class= "btn btn-primary mb-3 btnTDL_DT">詳細資料
                                                        </button></a></td>`
                        );
                        docFrag.append(eleT);
                    }
                    else {
                        eleT_sec = $(`<tr></tr>`).append(`<td class="col-1">${i_val.交辦事項id}</td>
                                                        <td class="col-1">${i_val.表單類型}</td>
                                                        <td class="col-3">${i_val.表單內容}</td>
                                                        <td class="col-1">${i_val.表單狀態}</td>
                                                        <td class="col-1"><a href = "${TDL_DTpath}/?listNum=${i_val.交辦事項id}"><button class= "btn btn-primary mb-3 btnTDL_DT">詳細資料
                                                        </button></a></td>`
                        );
                        docFrag_sec.append(eleT_sec);
                    }
                });
                $("#ToDolist_tbody").prepend(docFrag);
                $("#ToDolist_tbody_sec").append(docFrag_sec);
            });
    </script>


}

