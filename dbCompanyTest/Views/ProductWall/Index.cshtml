            border: 1px solid #dee2e6;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
            border-top-right-radius: 0.25rem;
            border-bottom-right-radius: 0.25rem;
        }

        .pagination li  {
            padding: 0.375rem 0.75rem ;
            position: relative;
            display: block;
            color: #0d6efd;
            text-decoration: none;
            background-color: #fff;
            border: 1px solid #dee2e6;
            transition: color .15s ease-in-out,background-color .15s ease-in-out,border-color .15s ease-in-out,box-shadow .15s ease-in-out;
            border-top-right-radius: 0.25rem;
            border-bottom-right-radius: 0.25rem;
        }
    </style>
}

    <div class="container py-5" style="font-family:'Microsoft YaHei';">
    <div class="row ">
        <div class="col-lg-12 d-flex">
                <div class="col-md-2 row ">
                <div class="col-md-6">
                    <ul class="list-inline shop-top-menu pb-3 pt-1" id="sclass">
                        @foreach (var item in Model)
                        {
                            <li class="list-inline-item">
                                <a class="h5 text-dark text-decoration-none" asp-action="type" asp-route-id="@item.商品鞋種id">@Html.DisplayFor(modelItem => item.鞋種名稱)</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
            <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-md-3 p-2 ">
                            <a asp-action="Details" asp-route-id="@item.商品編號id">
                                <div class="card mb-4 product-wap rounded-0">
                                    <div class="card rounded-0">
                                        <div>
                                            @{
                                                if (@item.產品圖片1 != null)
                                                {
                                                                        <img class="card-img rounded-0 img-fluid" src="~/images/@item.產品圖片1" width="236" height="324" />
                                                }
                                                else
                                                {
                                                                        <img class="card-img rounded-0 img-fluid" src="~/images/404.jpg" width="236" height="324" />
                                                }
                                            }
                                        </div>
                                        <div class="card-body">
                                            <a asp-action="Details" asp-route-id="@item.商品編號id">@item.商品名稱</a>
                                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                                <li>@Html.DisplayFor(modelItem => item.商品價格)</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
        </div>
    </div>
</div>

