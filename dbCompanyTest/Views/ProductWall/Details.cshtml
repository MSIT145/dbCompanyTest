@model dbCompanyTest.ViewModels.ProductDetailViewModels

<div class ="d-flex flex-row">

    @*center*@
        <div class="d-flex flex-column justify-content-center">
            @*麵包*@
            <div>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">首頁</a></li>
                    <li class="breadcrumb-item"><a href="#">@Model.pro商品分類</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.pro商品名稱 @Model.pro商品顏色</li>
                    <li class="breadcrumb-item active" aria-current="page">@Model.pro商品尺寸list.Count</li>
                </ol>
            </nav>
            </div>
            @*輪播*@
            <div>
            <div id="carouselExampleDark" class="carousel carousel-dark slide w-100 h-atuo">
                <div class="carousel-indicators">
                    <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="" aria-label="Slide 1"></button>
                    <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2" class=""></button>
                    <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3" class="active" aria-current="true"></button>
                </div>
                <div class="carousel-inner">
                    <div class="carousel-item" data-bs-interval="10000">
                        <img src="@Url.Content("~/images/"+Model.pro商品圖片1)" class="d-block w-100 h-auto width="800" height="400" />
                        <div class="carousel-caption d-none d-md-block">
                            @*<h5>First slide label</h5>
                            <p>Some representative placeholder content for the first slide.</p>*@
                        </div>
                    </div>
                    <div class="carousel-item" data-bs-interval="2000">
                            <img src="@Url.Content("~/images/"+Model.pro商品圖片2)" class="d-block w-100 h-auto" width="800" height="400" />
                        <div class="carousel-caption d-none d-md-block">
                            @*<h5>Second slide label</h5>
                            <p>Some representative placeholder content for the second slide.</p>*@
                        </div>
                    </div>
                    <div class="carousel-item active">
                            <img src="@Url.Content("~/images/"+Model.pro商品圖片3)" class="d-block w-100 h-auto" width="800" height="400" />
                        <div class="carousel-caption d-none d-md-block">
                            @*<h5>Third slide label</h5>
                            <p>Some representative placeholder content for the third slide.</p>*@
                        </div>
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            </div>
            @*其他圖片*@
            <div class="d-flex flex-column">
                <img src="@Url.Content("~/images/"+Model.pro商品圖片1)"></img>
                <img src="@Url.Content("~/images/"+Model.pro商品圖片2)"></img>
                <img src="@Url.Content("~/images/"+Model.pro商品圖片3)"></img>

            </div>
    </div>
    @*detail*@
    <div class="d-flex flex-column">
        <div>@Model.pro商品名稱 @Model.pro商品顏色</div>
    </div>

</div>